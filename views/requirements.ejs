<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>PCI Compliance Requirements</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="container">
        <h1>PCI Compliance Checklist</h1>
        <p class="intro">Select each requirement to review and complete the compliance assessment.</p>

        <form action="/submit-compliance-status" method="POST" class="compliance-form">
            <div class="requirements-list">
                <% requirements.forEach(requirement => { %>
                    <div class="requirement-item">
                        <a href="/requirements/<%= requirement.requirement_id%>" class="requirement-text"><%= requirement.name %></a>
                        <select name="compliance[<%= requirement.requirement_id%>]" class="status-dropdown" required>
                            <option value="Compliant">Compliant</option>
                            <option value="Non-Compliant">Non-Compliant</option>
                            <option value="N/A">N/A</option>
                        </select>
                    </div>
                <% }) %>
            </div>
            <button type="submit" class="button calculate-score-button">Calculate Score</button>

        </form>
    </div>
</body>
</html>
